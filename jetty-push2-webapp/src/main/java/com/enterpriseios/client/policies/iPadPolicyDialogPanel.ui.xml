<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'
             xmlns:s='urn:import:com.enterpriseios.client.policies'>
    <ui:style>


    </ui:style>
        <g:HTMLPanel>
            <table>
                <thead>
                    <tr>
                        <td>Status:<span ui:field="online"/></td>
                        <th>Policies/RemoteWipe</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <td colspan="3" align="center">Last Updated:<span ui:field="lastUpdated"/></td>
                    </tr>
                </tfoot>
                <tbody>
                    <tr>
                        <td rowspan="12"><g:Image ui:field="image"
                                                 url="iPhone-icon.png" height="300px" width="300px"/></td>
                        <td>DevicePasswordEnabled</td>
                        <td><s:CheckBoxPolicy ui:field="devicePasswordEnabled"/> </td>
                    </tr>
                    <tr><td>AllowSimpleDevicePassword</td>
                        <td><s:CheckBoxPolicy ui:field="allowSimpleDevicePassword"/> </td>
                    </tr>
                    <tr>
                        <td>AlphanumericDevicePasswordRequired</td>
                        <td><s:CheckBoxPolicy ui:field="alphanumericDevicePasswordRequired"/> </td>
                    </tr>
                    <tr>
                        <td>MinDevicePasswordComplexCharacters</td>
                        <td><s:DropBoxPolicy ui:field="minDevicePasswordComplexCharacters"/> </td>
                    </tr>
                    <tr>
                        <td>MinDevicePasswordLength</td>
                        <td><s:DropBoxPolicy ui:field="minDevicePasswordLength"/> </td>
                    </tr>
                      <tr>
                          <td>DevicePasswordExpiration</td>
                        <td><s:NumericPolicy ui:field="devicePasswordExpiration"/></td>
                    </tr>
                    <tr>
                        <td>DevicePasswordHistory</td>
                        <td><s:NumericPolicy ui:field="devicePasswordHistory"/> </td>
                    </tr>
                    <tr>
                        <td>MaxInactivityTimeDeviceLock</td>
                        <td><s:DropBoxPolicy ui:field="maxInactivityTimeDeviceLock"/> </td>
                    </tr>
                    <tr>
                        <td>MaxDevicePasswordFailedAttempts</td>
                        <td><s:DropBoxPolicy ui:field="maxDevicePasswordFailedAttempts"/> </td>
                    </tr>
                    <tr>
                        <td>
                        </td>
                    </tr>
                    <tr>
                        <td>

                        </td>
                    </tr>
                    <tr>
                        <td>
                            <g:Image url="apple.png" height="30px" width="30px" ui:field="apple" title="RemoteWipe"/>
                            <g:CheckBox ui:field="remoteWipe"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <g:CheckBox text="Disassociate upon window close." ui:field="disassociate"/>
                        </td>
                        <td></td>
                        <td>
                            <g:Button text="Close" ui:field="closeDialog"/>
                        </td>
                    </tr>
                </tbody>

            </table>
        </g:HTMLPanel>
</ui:UiBinder>